<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<fx:root onMouseClicked="#connect" stylesheets="@editor.css" type="Pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_RIGHT" fillHeight="false">
         <children>
            <Label fx:id="name" styleClass="connector-name" text="Name" textFill="#e8e8e8">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <Circle fx:id="connector" onMouseEntered="#mouseEntered" onMouseExited="#mouseExited" radius="5.5" strokeType="INSIDE" styleClass="connector">
               <HBox.margin>
                  <Insets left="6.0" />
               </HBox.margin>
            </Circle>
         </children>
      </HBox>
   </children>
   <styleClass>
      <String fx:value="input-output" />
      <String fx:value="output" />
   </styleClass>
</fx:root>
