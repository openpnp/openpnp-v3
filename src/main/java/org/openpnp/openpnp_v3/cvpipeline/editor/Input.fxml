<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>


<fx:root type="Pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" fillHeight="false">
         <children>
            <Circle fx:id="connector" fill="#89d5ff" onMouseClicked="#connect" radius="5.5" strokeType="INSIDE">
               <HBox.margin>
                  <Insets right="6.0" />
               </HBox.margin>
            </Circle>
            <Label fx:id="name" text="Name" textFill="#e8e8e8">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
</fx:root>
